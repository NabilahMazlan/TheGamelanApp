<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/song_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground"
    tools:context=".SongFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonPelogSongs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pelog" />

        <ListView
            android:id="@+id/lvPelogSongs"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/buttonSlendroSongs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/slendro" />

        <ListView
            android:id="@+id/lvSlendroSongs"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</FrameLayout>